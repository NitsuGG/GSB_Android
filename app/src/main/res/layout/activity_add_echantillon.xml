<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEchantillon">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ti_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="-16dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:text="Saisir une quantité stock"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ti_libelle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="-25dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:text="Saisir un libellé :"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="411dp"
        android:layout_height="38dp"
        android:text="Saisie d'un nouveau code d'échantillon"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Saisir un code :"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ti_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="1dp" />

    <LinearLayout
        android:layout_width="403dp"
        android:layout_height="84dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/ti_stock"
        tools:layout_editor_absoluteX="4dp">

        <Button
            android:id="@+id/buttonEnvoyer"
            android:layout_width="203dp"
            android:layout_height="49dp"
            android:layout_marginTop="16dp"
            android:onClick="AjouterEchantillon"
            android:text="Envoyer" />

        <Button
            android:id="@+id/buttonLeave"
            android:layout_width="198dp"
            android:layout_height="49dp"
            android:layout_marginTop="16dp"
            android:onClick="leaveAddEchantillon"
            android:text="Quitter" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>